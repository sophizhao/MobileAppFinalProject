<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepTrackerActivity"
    android:background="@drawable/pixel_city">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Sleep Tracker"
        style="@style/Title"
        android:textColor="@color/space_cadet"
        android:textSize="45sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/hoursSleptET"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_below="@id/titleTV"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/space_rounded_edit_text"
        android:ems="10"
        android:fontFamily="@font/margarine"
        android:hint="Good Morning! Log hours here!"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/logHoursButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hoursSleptET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/space_cadet"
        android:fontFamily="@font/margarine"
        android:onClick="addSleepButtonClicked"
        android:text="Log Hours"
        android:textColor="@color/white"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/sleepLogActTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logHoursButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/space_rounded_edit_text"
        android:fontFamily="@font/margarine"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hours Slept"
        android:textColor="@color/white" />


</RelativeLayout>