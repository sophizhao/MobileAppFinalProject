<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepTrackerActivity"
    android:background="@drawable/pixel_water">

    <TextView
        android:id="@+id/waterLogTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/myMargin"
        android:fontFamily="@font/margarine"
        android:text="Water Log"
        android:textColor="@color/space_cadet"
        android:textSize="48sp" />

    <EditText
        android:id="@+id/editTextWaterLog"
        android:layout_width="361dp"
        android:layout_height="64dp"
        android:layout_below="@id/waterLogTV"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:fontFamily="@font/margarine"
        android:hint="Enter the number of ounces drank!"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/logWaterButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/sparkplugproto" />

    <Button
        android:id="@+id/logWaterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextWaterLog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/margarine"
        android:text="Log Water" />

    <TextView
        android:id="@+id/sparkplugTextSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logWaterButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="TextView" />
</RelativeLayout>