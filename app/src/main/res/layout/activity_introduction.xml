<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IntroductionActivity"
    android:background="@drawable/pixel_pastel">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="Oh…it’s you. Ugh."
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="93dp"
        android:background="@drawable/cream_rounded_edit_text"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="261dp"
        android:layout_height="386dp"
        app:srcCompat="@drawable/hat_rat"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="143dp"
        />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="cycleText"/>

    <Button
        android:id="@+id/buttonGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Login"
        android:onClick="switchHome"/>


</androidx.appcompat.widget.LinearLayoutCompat>